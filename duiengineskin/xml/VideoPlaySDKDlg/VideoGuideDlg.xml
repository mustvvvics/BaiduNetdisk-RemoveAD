        <text name="text_price_second" pos="|140,|106" font2="facename:微软雅黑;adding:-1" crtext="9BDCFF" show="0"></text>
        <imgbtn name="btn_try" pos="|-35,|150,@70,@20" cursor="hand" crtext="AFB3BF" font="0000:微软雅黑" skin="titlepanel_translucent" show="0">%str5002%</imgbtn>
      </dlg>
      
      <dlg name="dlg_payoff_qr_code" pos="|-210,|-140,@220,@250" skin="video_guide_bubble" show="0">   
