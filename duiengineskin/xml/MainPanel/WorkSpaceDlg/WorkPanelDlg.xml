<layer name="WorkSpaceDlg" width="806" height="680" minsize="806,680" appwin="1" ncRect="12,12,12,12"  resize="1" translucent="1" nomaxsize="0">
    <body>
        <dlg name="WorkSpaceMainPanel" pos="0,0,-0,-0" skin="main_dlg_frame">
            <dlg name="MainPanel" pos="9,9,-9,-9" crbg="ffffff">
                <!--标题栏-->
                <dlg name="TitlePanel" pos="0,0,-0,50" show="1">
                    <include src="IDR_DUI_WORKSPACE_TITLE_PANEL"/>
                </dlg>
                <!--客户区-->
                <dlg name="ClientPanel" pos="0,50,-0,-0">
                    <!--左侧导航栏-->
                    <dlg name="LeftNavigatePanel" pos="0,0,68,-0" show="1">
                        <include src="IDR_DUI_WORKSPACE_NAVIGATE_PANEL"/>
                    </dlg>
                    <dlg pos="[0,0,-0,-0">
                        <dlg name="WorkSpaceWarnPanel" pos="0,0,-0,@0" show="0">
                            <include src="IDR_DUI_WORKSPACE_WARN_PANEL"/>
                        </dlg>
                        <!--文件列表区-->
                        <dlg name="NetdiskContainerPanel" pos="0,[0,-0,-49">
                            <!--文件-->
                            <dlg name="WorkSpaceFilePanel" pos="0,0,-0,-0" show="1">
                                <include src="IDR_DUI_WORKSPACE_FILE_PANEL"/>
                            </dlg>
                            <!--记录-->
                            <dlg name="RecordContainerPanel" pos="0,0,-0,-0" show="0">
                                <include src="IDR_DUI_WORKSPACE_RECORD_PANEL"/>
                            </dlg>
                            <!--回收站-->
                            <dlg name="RecycleContainerPanel" pos="0,0,-0,-0" show="0"/>
                        </dlg>
                        <!--同步状态栏-->
                        <dlg name="StatusDisplayPanel" pos="0,[0,-0,-0" show="1">
                            <include src="IDR_DUI_WORKSPACE_STATUSDISPLAY_PANEL"/>
                        </dlg>
                    </dlg>
                    <!--顶部操作栏阴影-->
                    <img pos="0,0,-0,75" skin="titlepanel_bgk"/>
                </dlg>
            </dlg>
        </dlg>
    </body>
</layer>
